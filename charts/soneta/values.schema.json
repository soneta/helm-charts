                "server": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "integer"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
