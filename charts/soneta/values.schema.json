{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "title": "Values",
    "properties": {
        "image": {
            "type": "object",
            "description": "Container image",
            "properties": {
                "repository": {
                    "type" :"string",
                    "default": "",
                    "description": "Repository url, if empty then dockerhub"
                },
                "product": {
                    "type" :"string",
                    "enum": ["standard", "premium"]
                },
                "tag":{
                    "type": "string"
                },
                "scheduler": {
                    "type": "boolean",
                    "default": false
                },
                "webapi": {
                    "type": "boolean",
                    "default": false
                },
                "webwcf": {
                    "type": "boolean",
                    "default": false
                },
                "webTagpostfix": {
                    "type": "string",
                    "default": "-windowsservercore",
                    "enum": ["-alpine", "-nanoserver", "-windowsservercore"]
                },
                "serverTagpostfix": {
                    "type": "string",
                    "default": "-windowsservercore",
                    "enum": ["-alpine", "-nanoserver", "-windowsservercore"]
                }
            },
            "required": [
                "repository",
                "product",
                "tag"
            ]
        },

        "replicaCount": {
            "type": "number",
            "description": "The number of replicas for the container"
        },

        "imagePullSecrets": {
            "type": "array",
            "description": " Credentials or authentication information for pulling the container image"
        },

        "nameOverride": {
            "type": "string",
            "description": "Override for the name of the container"
        },

        "fullnameOverride": {
            "type": "string",
            "description": "Override for the full name of the container"
        },

        "service": {
            "type": "object",
            "description": "Configuration for the container service",
            "properties": {
                "type": {
                    "type": "string"
                },
                "server": {
                    "type": "object",
                    "description": "Configuration for the server in the service",
                    "properties": {
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        },

        "ingress": {
            "type": "object",
            "description": "Configuration for the container ingress",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "host": {
                    "type": "string",
                    "description": "The host address for the ingress"
                }
            }
        },

        "nodeSelector": {
            "type": "array",
            "description": "Configuration for selecting specific nodes for the container"
        },

        "tolerations": {
            "type": "array",
            "description": "Configuration for tolerating certain conditions for the container"
        },

        "affinity": {
            "type": "object",
            "description": "Array of affinity rules for the container"
        },

        "resources": {
            "type": "object",
            "description": "Resource allocation configuration for different components",
            "properties": {
                "web": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
